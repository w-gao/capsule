{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "paths": {
      "@capsule/common": ["./packages/common/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
